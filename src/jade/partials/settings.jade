nav
  .content
    .w25.tal
      include ../include/nav-index-link
    .w50.state-title
      .h2-font-size!="Settings"
    .w25.tar
      include ../include/nav-sign-out-link
section
  .content
    article(ng-repeat="id in setting_ids")
      .setting
        .name-and-control
          .name.ib.w75.tal.h3-font-size
            | {{ settings[id].name }}
          .control.ib.w25.tar
            a.boolean(ng-if="settings[id].type === 'boolean'", ng-class="[user.settings[id]]", ng-click="toggleBooleanSetting(id)")
              .off!="OFF"
              .on!="ON"
        .note.tal(ng-if="settings[id].note")
          | {{ settings[id].note }}