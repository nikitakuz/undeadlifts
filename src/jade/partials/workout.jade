section
  .heading
    h3
      | {{ routine.date | date:'EEE MMM d' }}
    h1
      | {{ routine.name }}
  .content
    .routine
      .lift(ng-repeat="lift in lifts", ng-class="[lift.classname]")
        .name-and-weight
          .name!="{{ lift.name }}"
          .weight(ng-click="changeWorkingWeight(lift.name)")!="{{ user.working_weight[lift.name] }} {{ weight_unit }}"
        .set(ng-repeat="set in getNumber(lift.sets) track by $index", ng-click="updateSet(lift, $index)", ng-class="{completed: lift.completed[$index] > -1}")
          .reps
            | {{ lift.completed[$index] > -1 ? lift.completed[$index] : lift.reps }}
    br
    br
    .finish-workout.tac
      button.p1em(ng-click="finishWorkout()")!="Finish Workout"