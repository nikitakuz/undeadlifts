.modal-background
  .modal-gutter
  .modal-dialog
    .heading
      h3!="Change {{ lift }} Weight"
    .content
      .tal
        | If your bar weighs {{ weight_unit === 'kg' ? 20 : 45 }}{{ weight_unit }}, {{ weight }}{{ weight_unit }} means you add {{ (weight - 45) / 2 }}{{ weight_unit }} on each side.
      br
      .tac
        button(ng-click="decreaseWeight()")!="-"
        span.h2-font-size
          | &nbsp;&nbsp;{{ weight }}{{ weight_unit }}&nbsp;&nbsp;
        button(ng-click="increaseWeight()")!="+"
      br
      .tac
        button(ng-click="saveWeight()")!="OK"
        | &nbsp;&nbsp;&nbsp;
        button(ng-click="cancelChanges()")!="Cancel"
      br
      .tal
        h3!="Plate Calculator"
        div(ng-if="plates['45']")
          | {{ plates['45'] }} forty-five
        div(ng-if="plates['35']")
          | {{ plates['35'] }} thirty-five
        div(ng-if="plates['25']")
          | {{ plates['25'] }} twenty-five
        div(ng-if="plates['10']")
          | {{ plates['10'] }} ten
        div(ng-if="plates['5']")
          | {{ plates['5'] }} five
        div(ng-if="plates['2.5']")
          | {{ plates['2.5'] }} two-point-five


  .modal-gutter