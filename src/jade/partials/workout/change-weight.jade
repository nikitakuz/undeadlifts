.modal-background
  section
    .modal-gutter
    .modal-dialog
      .heading
        h3!="Change {{ lift }} Weight"
      .content
        .tal
          | If your bar weighs {{ weight_unit === 'kg' ? 20 : 45 }}{{ weight_unit }}, {{ weight }}{{ weight_unit }} means you add {{ (weight - 45) / 2 }}{{ weight_unit }} on each side.
        br
        .tac
          button(ng-click="decreaseWeight()")!="-"
          span.h2-font-size
            | &nbsp;&nbsp;{{ weight }}{{ weight_unit }}&nbsp;&nbsp;
          button(ng-click="increaseWeight()")!="+"
        br
        .tac
          button(ng-click="saveWeight()")!="OK"
          | &nbsp;&nbsp;&nbsp;
          button(ng-click="cancelChanges()")!="Cancel"
        br
        .plates
          h3!="Plate Calculator"
          .forty-five(ng-if="plates['45']")
            | {{ plates['45'] }} X
            .plate!="45lb"
          .thirty-five(ng-if="plates['35']")
            | {{ plates['35'] }} X
            .plate!="35lb"
          .twenty-five(ng-if="plates['25']")
            | {{ plates['25'] }} X
            .plate!="25lb"
          .ten(ng-if="plates['10']")
            | {{ plates['10'] }} X
            .plate!="10lb"
          .ib
            .five(ng-if="plates['5']")
              | {{ plates['5'] }} X
              .plate!="5lb"
            .two-point-five(ng-if="plates['2.5']")
              | {{ plates['2.5'] }} X
              .plate!="2.5lb"


  .modal-gutter