nav#nav(ng-controller="NavController")
  .content
    .w25.tal
      .h2-font-size(ng-if="$state.is('user.index')")
        .nbsp!="&nbsp;"
        .icon(ng-include="'svg/zombie-head.html'")
      a(ng-if="initialState && !$state.is('user.index')", ng-click="$state.replace('user.index')")
        .h2-font-size
          .lsaquo!="&lsaquo;"
          .icon(ng-include="'svg/zombie-head.html'")
      a(ng-if="!initialState && !$state.is('user.index')", ng-click="$state.back()")
        .h2-font-size
          .lsaquo!="&lsaquo;"
          .icon(ng-include="'svg/zombie-head.html'")

    .w50.state-title
      .h2-font-size(ng-switch='' on='$state.current.name')
        span(ng-switch-when="user.index")!="Undead Lifts"
        span(ng-switch-when="user.create-routine.add-lift")!="Add Lift"
        span(ng-switch-default="")!="{{ getTitle() }}"
    .w25.tar
      // TODO: Clean up the following. Move some of the logic to controller?
      .ib.h2-font-size(ng-if="$state.is('user.history.month')")
        a(ui-sref="user.history.list")
          .icon(ng-include="'svg/list.html'")
        .nbsp!="&nbsp;"
      .ib.h2-font-size(ng-if="$state.is('user.history.list')")
        a(ui-sref="user.history.month({ year: now.getFullYear(), month: now.getMonth() + 1 })")
          .icon(ng-include="'svg/calendar.html'")
        .nbsp!="&nbsp;"
      .ib.h2-font-size(ng-if="$state.includes('user.select-routine')")
        a(ui-sref="user.create-routine.index")
          .icon(ng-include="'svg/plus.html'")
        .nbsp!="&nbsp;"
      .ib.h2-font-size
        a(ng-click="showMenu = true;")
          .icon(ng-include="'svg/drops.html'")
        .nbsp!="&nbsp;"
      .hide-menu(ng-show="showMenu", ng-click="showMenu = false;")
      .menu(ng-show="showMenu")
        .top-position-helper.h2-font-size!="&nbsp;"
        a.h3-font-size(ng-if="$state.includes('user.workout') || $state.includes('user.history.details')", ng-click="deleteWorkout()")
          !="Delete Workout"
        a.h3-font-size(ui-sref="user.settings")
          !="Settings"
        a.h3-font-size(ng-click="logout()")
          !="Logout"